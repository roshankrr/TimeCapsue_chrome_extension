{
    "manifest_version": 3,
    "name": "Digital Time Capsule",
    "description": "Write notes for yourself and get reminded in the future.",
    "version": "1.0",
    "permissions": ["storage", "notifications", "alarms"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  